/* pages/index/index.wxss */
.page { padding: 24rpx 28rpx 40rpx; background:#fff; min-height:100vh; }
.header .date { color:#7A7F89; font-size:24rpx; }
.header .title { margin-top:8rpx; font-size:40rpx; font-weight:600; }
.book { margin-top:16rpx; display:flex; align-items:center; }
.cover { width:72rpx; height:72rpx; border-radius:8rpx; background:#eef3ff; }
.book-name { margin-left:16rpx; color:#2B2F36; font-size:28rpx; }
.stats { margin-top:36rpx; padding:24rpx; border-radius:16rpx; background:#F6F8FF; display:flex; align-items:center; }
.stat { flex:1; text-align:center; }
.num { font-size:44rpx; font-weight:700; color:#2F6BFF; }
.label { margin-top:6rpx; color:#6B7280; font-size:24rpx; }
.divider { width:1px; height:48rpx; background:#E5E7EB; }
.progress-wrap { margin:28rpx 8rpx 0; position:relative; }
.progress-text { position:absolute; right:0; top:-8rpx; color:#6B7280; font-size:24rpx; }
.cta { margin-top:40rpx; height:96rpx; line-height:96rpx; background:#2F6BFF; border-radius:16rpx; color:#fff; }
.empty { margin-top:120rpx; text-align:center; color:#2B2F36; }
.empty .done { font-size:36rpx; font-weight:600; }
.empty .sub { margin-top:10rpx; color:#6B7280; font-size:26rpx; }
.skeleton { margin-top:48rpx; height:260rpx; border-radius:16rpx; background:linear-gradient(90deg,#f3f4f6 25%,#e5e7eb 37%,#f3f4f6 63%); animation:shine 1.4s infinite; }
@keyframes shine { 0%{background-position:-200px 0} 100%{background-position:calc(200px + 100%) 0} }
.error { margin-top:120rpx; text-align:center; color:#EF4444; }
