/* pages/index/index.wxss */
.welcome-section {
  padding: 60rpx 40rpx 40rpx;
  text-align: center;
}

.title-large {
  display: block;
  font-size: 48rpx;
  font-weight: 600;
  color: #1F2937;
  margin-bottom: 16rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #6B7280;
}

/* 主要入口区域 */
.main-entries {
  padding: 0 32rpx 32rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.entry-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  display: flex;
  align-items: flex-start;
  transition: all 0.3s ease;
}

.entry-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.06);
}

.card-icon {
  font-size: 72rpx;
  margin-right: 32rpx;
  line-height: 1;
}

.card-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.card-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1F2937;
  margin-bottom: 8rpx;
}

.card-subtitle {
  font-size: 24rpx;
  color: #9CA3AF;
  margin-bottom: 16rpx;
}

.card-info {
  font-size: 28rpx;
  color: #4B5563;
  margin-bottom: 16rpx;
}

/* 渐变色块 */
.primary-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.primary-card .card-title,
.primary-card .card-subtitle,
.primary-card .card-info {
  color: #FFFFFF;
}

.danger-card {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

.danger-card .card-title,
.danger-card .card-subtitle,
.danger-card .card-info {
  color: #FFFFFF;
}

.success-card {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}

.success-card .card-title,
.success-card .card-subtitle,
.success-card .card-info {
  color: #FFFFFF;
}

/* 进度条 */
.progress-mini {
  height: 8rpx;
  background-color: rgba(255, 255, 255, 0.3);
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-mini-fill {
  height: 100%;
  background-color: #FFFFFF;
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

/* 微型统计 */
.mini-stats {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

.mini-stat {
  white-space: nowrap;
}

.mini-stat-divider {
  margin: 0 16rpx;
  color: rgba(255, 255, 255, 0.5);
}

/* 弹窗样式 */
.resume-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: relative;
  width: 600rpx;
  padding: 48rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
  z-index: 1001;
}

.modal-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #1F2937;
  margin-bottom: 16rpx;
}

.modal-text {
  display: block;
  font-size: 28rpx;
  color: #6B7280;
  margin-bottom: 32rpx;
}

.modal-actions {
  display: flex;
  gap: 16rpx;
}

.modal-actions button {
  flex: 1;
}
