/* pages/study/result.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #FFFFFF 0%, #F9FAFB 100%);
  padding: 40rpx 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.result-card {
  width: 100%;
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 60rpx 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 32rpx;
}

.result-icon {
  margin-bottom: 24rpx;
}

.result-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #111827;
  margin-bottom: 48rpx;
}

.accuracy-circle {
  width: 240rpx;
  height: 240rpx;
  border-radius: 50%;
  background: #FFFFFF;
  border: 12rpx solid #FF7A7A;
  box-shadow: 0 0 20rpx rgba(255, 122, 122, 0.2);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 48rpx;
}

.accuracy-value {
  font-size: 72rpx;
  font-weight: 800;
  color: #FF7A7A;
  line-height: 1;
  margin-bottom: 8rpx;
}

.accuracy-label {
  font-size: 26rpx;
  color: #6B7280;
  font-weight: 500;
}

.stats-grid {
  display: flex;
  width: 100%;
  margin-bottom: 48rpx;
  gap: 20rpx;
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx 16rpx;
  background: #F9FAFB;
  border-radius: 16rpx;
  border: 2rpx solid transparent;
}

.stat-item.correct {
  background: #ECFDF5;
  border-color: #D1FAE5;
}

.stat-item.wrong {
  background: #FEF2F2;
  border-color: #FEE2E2;
}

.stat-value {
  font-size: 44rpx;
  font-weight: 700;
  color: #1F2937;
  margin-bottom: 8rpx;
}

.stat-item.correct .stat-value { color: #059669; }
.stat-item.wrong .stat-value { color: #DC2626; }

.stat-label {
  font-size: 24rpx;
  color: #6B7280;
}

.action-buttons {
  display: flex;
  gap: 24rpx;
  width: 100%;
}

.btn-primary,
.btn-secondary {
  flex: 1;
  height: 96rpx;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-primary {
  background: linear-gradient(135deg, #FF7A7A 0%, #FF6B6B 100%);
  color: #FFFFFF;
  box-shadow: 0 8rpx 20rpx rgba(255, 122, 122, 0.3);
}

.btn-secondary {
  background: #FFFFFF;
  color: #FF7A7A;
  border: 2rpx solid #FF7A7A;
}

.encouragement {
  width: 100%;
  padding: 24rpx 32rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 16rpx;
  text-align: center;
  backdrop-filter: blur(4px);
}

.encouragement text {
  font-size: 28rpx;
  color: #4B5563;
  font-weight: 500;
}

/* 马到成功动画 */
.success-horse {
  width: 320rpx;
  height: 320rpx;
  animation: popIn 0.8s cubic-bezier(0.34, 1.56, 0.64, 1) forwards,
             gallop 2s ease-in-out infinite 0.8s;
}

@keyframes popIn {
  0% { opacity: 0; transform: scale(0.3) translateY(50rpx); }
  100% { opacity: 1; transform: scale(1) translateY(0); }
}

@keyframes gallop {
  0%, 100% { transform: translateY(0) rotate(0deg); }
  25% { transform: translateY(-10rpx) rotate(-2deg); }
  75% { transform: translateY(-5rpx) rotate(2deg); }
}
