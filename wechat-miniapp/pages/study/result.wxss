/* pages/study/result.wxss */
.container {
  min-height: 100vh;
  background: #F3F4F6; /* 与全局一致的浅灰背景 */
  padding: 40rpx 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.result-card {
  width: 100%;
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 48rpx 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05); /* 轻投影，与全局 card 一致 */
  display: flex;
  flex-direction: column;
  align-items: center;
}

.result-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
}

.result-title {
  font-size: 48rpx;
  font-weight: 600;
  color: #111827;
  margin-bottom: 40rpx;
}

.accuracy-circle {
  width: 220rpx;
  height: 220rpx;
  border-radius: 50%;
  background: #FFFFFF;
  border: 10rpx solid #E5E7EB; /* 柔和描边环 */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
}

.accuracy-value {
  font-size: 64rpx;
  font-weight: 700;
  color: #111827;
  line-height: 1;
  margin-bottom: 6rpx;
}

.accuracy-label {
  font-size: 24rpx;
  color: #6B7280;
}

.stats-grid {
  display: flex;
  width: 100%;
  margin-bottom: 40rpx;
  gap: 16rpx;
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 20rpx;
  background: #F9FAFB;
  border-radius: 16rpx;
}

.stat-item.correct {
  background: #ECFDF5;
}

.stat-item.wrong {
  background: #FEF2F2;
}

.stat-value {
  font-size: 48rpx;
  font-weight: 700;
  color: #111827;
  margin-bottom: 8rpx;
}

.stat-item.correct .stat-value {
  color: #10B981;
}

.stat-item.wrong .stat-value {
  color: #EF4444;
}

.stat-label {
  font-size: 24rpx;
  color: #6B7280;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
  width: 100%;
}

.btn-primary,
.btn-secondary {
  flex: 1;
  height: 88rpx;
}
/* 使用全局 app.wxss 中的按钮样式，保持一致 */

.encouragement {
  margin-top: 32rpx;
  padding: 24rpx 32rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.encouragement text {
  font-size: 28rpx;
  color: #374151;
  line-height: 1.6;
}
