/* pages/study/study.wxss */
.study-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #F9FAFB 0%, #F3F4F6 100%);
  padding: 0;
}

/* 头部信息 */
.study-header {
  background: #FFFFFF;
  padding: 32rpx 32rpx 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  border-bottom: 1rpx solid #F3F4F6;
}

/* 正确答题时，顶部轻微波浪抖动 */
.study-page.celebrate .study-header,
.study-page.celebrate .fun-progress {
  animation: header-wave 0.6s ease-out;
  transform-origin: center bottom;
}

.study-page.celebrate .word-display {
  animation: header-wave 0.6s ease-out 0.05s;
}

@keyframes header-wave {
  0% {
    transform: translateY(0);
  }
  20% {
    transform: translateY(-8rpx);
  }
  40% {
    transform: translateY(4rpx);
  }
  60% {
    transform: translateY(-4rpx);
  }
  100% {
    transform: translateY(0);
  }
}

.header-info {
  flex: 1;
}

.word-count {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #111827;
  margin-bottom: 8rpx;
}

.time-spent {
  display: block;
  font-size: 24rpx;
  color: #6B7280;
}

.exit-btn {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #FEF2F2;
  color: #EF4444;
  font-size: 48rpx;
  font-weight: 300;
  border-radius: 50%;
  line-height: 1;
}

/* 趣味进度条 */
.fun-progress {
  padding: 24rpx 32rpx;
  background: #FFFFFF;
}

.progress-track {
  position: relative;
  height: 16rpx;
  background: #E5E7EB;
  border-radius: 8rpx;
  overflow: visible;
}

.progress-fill {
  position: relative;
  height: 100%;
  background: linear-gradient(90deg, #FF7A7A 0%, #FF9E9E 50%, #FFC1C1 100%);
  border-radius: 8rpx;
  transition: width 0.5s cubic-bezier(0.4, 0, 0.2, 1);
}

.progress-emoji {
  position: absolute;
  right: -12rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 32rpx;
  line-height: 1;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.1));
}

/* 加载中 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 600rpx;
  font-size: 32rpx;
  color: #9CA3AF;
}

/* 答题内容 */
.study-content { padding: 32rpx 24rpx 24rpx; }

/* 单词展示（仅英文） */
.word-display {
  padding: 60rpx 24rpx 40rpx;
  margin-bottom: 24rpx;
}

.word-row {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
}

.speaker {
  font-size: 48rpx;
  cursor: pointer;
  transition: transform 0.2s ease;
}

.speaker:active {
  transform: scale(0.9);
}

.word-text {
  font-size: 68rpx;
  font-weight: 700;
  color: #111827;
  letter-spacing: 2rpx;
  display: inline-block;
  animation: fadeIn 0.5s ease;
}

.chinese-text {
  font-size: 64rpx;
}

.question-hint {
  display: block;
  font-size: 26rpx;
  color: #9CA3AF;
  text-align: center;
  margin-top: 16rpx;
}

/* 音频图标（听力题） */
.audio-icon {
  width: 160rpx;
  height: 160rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 96rpx;
  background: linear-gradient(135deg, #FF7A7A 0%, #D65D5D 100%);
  border-radius: 50%;
  margin: 0 auto 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(255, 122, 122, 0.3);
  transition: all 0.3s ease;
}

.audio-icon:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 16rpx rgba(255, 122, 122, 0.3);
}

/* 句子展示（填空题） */
.sentence-display {
  padding: 32rpx 24rpx;
  background: #F9FAFB;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  border: 2rpx dashed #D1D5DB;
}

.sentence-text {
  font-size: 32rpx;
  color: #111827;
  line-height: 1.8;
  text-align: center;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}


/* 选项列表 */
.options-list {
  margin-bottom: 12rpx;
}

.option-item {
  display: flex;
  align-items: center;
  background: #FFFFFF;
  border-radius: 12rpx;
  padding: 20rpx 20rpx;
  margin-bottom: 12rpx;
  border: 2rpx solid #E5E7EB;
  transition: all 0.2s ease;
}

.option-item.selected {
  border-color: #FF7A7A;
  background: #FFF1F1;
}

.option-item.correct {
  border-color: #10B981;
  background: #ECFDF5;
}

.option-item.wrong {
  border-color: #EF4444;
  background: #FEF2F2;
}

.option-label {
  width: 52rpx;
  height: 52rpx;
  border-radius: 50%;
  background: #F3F4F6;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 600;
  color: #6B7280;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.option-item.selected .option-label {
  background: #FF7A7A;
  color: #FFFFFF;
}

.option-item.correct .option-label {
  background: #10B981;
  color: #FFFFFF;
}

.option-item.wrong .option-label {
  background: #EF4444;
  color: #FFFFFF;
}

.option-content {
  flex: 1;
  font-size: 28rpx;
  color: #111827;
  line-height: 1.6;
}

.option-icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 600;
  margin-left: 20rpx;
}

.option-item.correct .option-icon {
  color: #10B981;
}

.option-item.wrong .option-icon {
  color: #EF4444;
}

/* 结果反馈（底部条） */
.result-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 16rpx 24rpx calc(env(safe-area-inset-bottom) + 16rpx);
  z-index: 20;
  overflow: visible;
}
.result-bar .result-main { display: flex; align-items: center; gap: 16rpx; }
.result-bar .result-icon { font-size: 32rpx; }
.result-bar .result-text { font-size: 28rpx; font-weight: 600; }
.result-bar .result-extra { font-size: 24rpx; opacity: 0.9; }
.result-bar .result-meaning { font-size: 24rpx; opacity: 0.8; margin-left: auto; }
/* 正确：柔和浅绿背景，深色文字确保清晰 */
.result-bar.ok { background: #D9FFC4; color: #1F2937; }
/* 错误：柔和浅粉背景，深色文字确保清晰 */
.result-bar.bad { background: #FFE1E1; color: #1F2937; }
/* 图标颜色与语义一致 */
.result-bar.ok .result-icon { color: #10B981; }
.result-bar.bad .result-icon { color: #DC2626; }

/* 正确答题时，在底部结果条上方放烟花动画 */
.fireworks {
  position: absolute;
  left: 50%;
  top: -40rpx;
  transform: translateX(-50%);
  width: 260rpx;
  height: 140rpx;
  pointer-events: none;
}

.firework {
  position: absolute;
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #FDBA74;
  box-shadow: 0 0 0 0 rgba(251, 146, 60, 0.8);
  opacity: 0;
  animation: firework-burst 0.8s ease-out forwards;
}

.firework-1 {
  left: 5%;
  bottom: 0;
}

.firework-2 {
  left: 30%;
  bottom: 0;
  background: #A5B4FC;
  animation-delay: 0.06s;
}

.firework-3 {
  left: 55%;
  bottom: 0;
  background: #6EE7B7;
  animation-delay: 0.12s;
}

.firework-4 {
  left: 80%;
  bottom: 0;
  background: #FDE68A;
  animation-delay: 0.18s;
}

.firework-5 {
  right: 0;
  bottom: 0;
  background: #F9A8D4;
  animation-delay: 0.24s;
}

@keyframes firework-burst {
  0% {
    transform: translateY(0) scale(0.5);
    opacity: 0;
    box-shadow: 0 0 0 0 rgba(251, 146, 60, 0.8);
  }
  50% {
    transform: translateY(-80rpx) scale(1.1);
    opacity: 1;
    box-shadow: 0 0 0 12rpx rgba(251, 146, 60, 0);
  }
  100% {
    transform: translateY(-120rpx) scale(0.9);
    opacity: 0;
    box-shadow: 0 0 0 18rpx rgba(251, 146, 60, 0);
  }
}

.correct-feedback {
  border-left: 6rpx solid #10B981;
}

.wrong-feedback {
  border-left: 6rpx solid #EF4444;
}

.feedback-icon {
  font-size: 64rpx;
  text-align: center;
  margin-bottom: 16rpx;
}

.correct-feedback .feedback-icon {
  color: #10B981;
}

.wrong-feedback .feedback-icon {
  color: #EF4444;
}

.feedback-text {
  font-size: 32rpx;
  font-weight: 600;
  text-align: center;
  color: #111827;
  margin-bottom: 20rpx;
}

.correct-answer {
  font-size: 28rpx;
  color: #10B981;
  text-align: center;
  margin-bottom: 20rpx;
  padding: 16rpx;
  background: #ECFDF5;
  border-radius: 8rpx;
}

.meaning-section {
  padding-top: 20rpx;
  border-top: 1rpx solid #E5E7EB;
}

.meaning-label {
  font-size: 26rpx;
  color: #6B7280;
  margin-bottom: 8rpx;
}

.meaning-text {
  font-size: 28rpx;
  color: #111827;
  line-height: 1.6;
  margin-bottom: 8rpx;
}

.meaning-secondary {
  font-size: 26rpx;
  color: #6B7280;
  line-height: 1.6;
}

/* 提交按钮 */
.submit-section { margin-bottom: 120rpx; }

.submit-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #FF7A7A 0%, #D65D5D 100%);
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 12rpx;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(255, 122, 122, 0.3);
}

.submit-btn[disabled] {
  background: #E5E7EB;
  color: #9CA3AF;
  box-shadow: none;
}

.continue-btn {
  background: linear-gradient(135deg, #FF7A7A 0%, #D65D5D 100%);
  box-shadow: 0 4rpx 12rpx rgba(255, 122, 122, 0.3);
}

/* 统计信息 */
.stats-section {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #FFFFFF;
  border-radius: 12rpx;
  padding: 24rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.correct-color {
  color: #10B981;
}

.wrong-color {
  color: #EF4444;
}

.stat-label {
  font-size: 24rpx;
  color: #6B7280;
}

.stat-divider {
  width: 1rpx;
  height: 60rpx;
  background: #E5E7EB;
  margin: 0 60rpx;
}

/* 多词性多释义显示 */
.meanings-display {
  text-align: center;
  padding: 20rpx 0;
}

.meaning-item {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 16rpx;
  line-height: 1.6;
}

.pos-tag {
  display: inline-block;
  padding: 4rpx 12rpx;
  background: #DBEAFE;
  color: #1E40AF;
  font-size: 22rpx;
  font-weight: 600;
  border-radius: 6rpx;
  margin-right: 12rpx;
  min-width: 60rpx;
  text-align: center;
}

.meaning-text {
  font-size: 52rpx;
  font-weight: 600;
  color: #111827;
}

/* 结果反馈中的多释义 */
.result-meanings {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  margin-left: 16rpx;
  flex: 1;
}

.result-meaning-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.meaning-pos {
  padding: 2rpx 8rpx;
  background: rgba(30, 64, 175, 0.1);
  color: #1E40AF;
  font-size: 20rpx;
  border-radius: 4rpx;
  font-weight: 600;
}

.meaning-content {
  font-size: 22rpx;
  color: inherit;
  opacity: 0.9;
}
