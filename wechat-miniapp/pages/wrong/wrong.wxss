/* pages/wrong/wrong.wxss */
.container {
  min-height: 100vh;
  background-color: #F3F4F6;
}

.header {
  background: #FFFFFF;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #E5E7EB;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #111827;
}

.header-count {
  font-size: 28rpx;
  color: #6B7280;
}

.loading,
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 30rpx;
}

.loading text {
  font-size: 28rpx;
  color: #9CA3AF;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #6B7280;
  margin-bottom: 12rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: #9CA3AF;
}

.content {
  padding-bottom: 30rpx;
}

.filter-tabs {
  background: #FFFFFF;
  padding: 20rpx 20rpx 0 20rpx;
  white-space: nowrap;
  border-bottom: 1rpx solid #E5E7EB;
}

.filter-item {
  display: inline-block;
  padding: 16rpx 32rpx;
  margin-right: 16rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #6B7280;
  background: #F9FAFB;
  border-radius: 20rpx;
  transition: all 0.2s;
}

.filter-item.active {
  background: #4F46E5;
  color: #FFFFFF;
}

.question-list {
  padding: 30rpx;
}

.question-item {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.question-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.word {
  font-size: 36rpx;
  font-weight: 600;
  color: #111827;
}

.type-badge {
  padding: 8rpx 16rpx;
  background: #EEF2FF;
  color: #4F46E5;
  font-size: 22rpx;
  border-radius: 8rpx;
}

.question-content {
  margin-bottom: 20rpx;
}

.answer-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.label {
  font-size: 26rpx;
  min-width: 140rpx;
}

.wrong-label {
  color: #6B7280;
}

.correct-label {
  color: #10B981;
}

.value {
  font-size: 28rpx;
  flex: 1;
}

.wrong-value {
  color: #EF4444;
  text-decoration: line-through;
}

.correct-value {
  color: #10B981;
  font-weight: 500;
}

.meaning {
  padding-top: 16rpx;
  border-top: 1rpx solid #F3F4F6;
  font-size: 26rpx;
  color: #6B7280;
  line-height: 1.6;
}
